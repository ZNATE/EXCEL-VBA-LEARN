Sub 字体()
'
' 字体 宏
    Range("A1:AO1").Select
    Selection.Font.Bold = True
    With Selection.Font
        .Name = "等线"
        .Size = 20
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    Range("B57:AO57").Select
    With Selection.Font
        .Name = "等线"
        .Size = 20
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    Range("A2:AO2,A58:AO58").Select
    Range("A58").Activate
    ActiveWindow.SmallScroll Down:=3
    Range("A2:AO2,A58:AO58,A59:AO59").Select
    Range("A59").Activate
    ActiveWindow.SmallScroll Down:=-6
    Range("A2:AO2,A58:AO58,A59:AO59,B3:AO56").Select
    Range("B3").Activate
    ActiveWindow.SmallScroll Down:=-3
    With Selection.Font
        .Name = "等线"
        .Size = 12
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
End Sub
