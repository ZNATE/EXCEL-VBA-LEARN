End Sub
Sub 宏6()
'
' 合并单元格
    Range("A1:AO1").Select
    With Selection
        .HorizontalAlignment = xlCenter
        .VerticalAlignment = xlCenter
        .WrapText = False
        .Orientation = 0
        .AddIndent = False
        .IndentLevel = 0
        .ShrinkToFit = False
        .ReadingOrder = xlContext
        .MergeCells = False
    End With
    Selection.Merge
    Range("B2:I2").Select
    With Selection
        .HorizontalAlignment = xlCenter
        .VerticalAlignment = xlCenter
        .WrapText = False
        .Orientation = 0
        .AddIndent = False
        .IndentLevel = 0
        .ShrinkToFit = False
        .ReadingOrder = xlContext
        .MergeCells = False
    End With
    Selection.Merge
    Selection.AutoFill Destination:=Range("B2:AO2"), Type:=xlFillDefault
    Range("B2:AO2").Select
    ActiveWindow.SmallScroll Down:=3
    Range("B57:I57").Select
    With Selection
        .HorizontalAlignment = xlCenter
        .VerticalAlignment = xlCenter
        .WrapText = False
        .Orientation = 0
        .AddIndent = False
        .IndentLevel = 0
        .ShrinkToFit = False
        .ReadingOrder = xlContext
        .MergeCells = False
    End With
    Selection.Merge
    Selection.AutoFill Destination:=Range("B57:AO57"), Type:=xlFillDefault
    Range("B57:AO57").Select
    ActiveWindow.SmallScroll Down:=3
    Range("A58:AO58").Select
    With Selection
        .HorizontalAlignment = xlCenter
        .VerticalAlignment = xlCenter
        .WrapText = False
        .Orientation = 0
        .AddIndent = False
        .IndentLevel = 0
        .ShrinkToFit = False
        .ReadingOrder = xlContext
        .MergeCells = False
    End With
    Selection.Merge
    Selection.AutoFill Destination:=Range("A58:AO59"), Type:=xlFillDefault
    Range("A58:AO59").Select
    ActiveWindow.SmallScroll Down:=-15
End Sub
